<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/gambarPresiden"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:paddingRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/keteranganPresiden"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/gambarPresiden"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/namaPresiden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Presiden"
                android:textSize="20sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/presidenKeBerapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Presiden Ke berapa"
                />
            <TextView
                android:id="@+id/masaJabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masa Jabatan"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Info"
                    android:id="@+id/moreInfo"
                    android:textSize="8sp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/gallery_foto"
                    android:text="Gallery"
                    android:textSize="8sp"
                    android:id="@+id/buttonGallery"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>